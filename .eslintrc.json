{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery"
	],
	"globals": {
		"OO": false,
		"mw": false,
		"ve": false,
		"CodeMirror": false
	},
	"rules": {
		"max-len": "off",
		"no-jquery/no-global-selector": "off",
		"brace-style": "warn",
		"camelcase": "warn",
		"eqeqeq": "warn",
		"max-statements-per-line": "warn",
		"new-cap": "warn",
		"no-alert": "warn",
		"no-console": "warn",
		"no-constant-condition": "warn",
		"no-dupe-keys": "warn",
		"no-empty": "warn",
		"no-implicit-globals": "warn",
		"no-mixed-spaces-and-tabs": "warn",
		"no-redeclare": "warn",
		"no-tabs": "warn",
		"no-undef": "warn",
		"no-underscore-dangle": "warn",
		"no-unused-vars": "warn",
		"no-use-before-define": "warn",
		"no-useless-concat": "warn",
		"one-var": "warn",
		"valid-jsdoc": "warn",
		"vars-on-top": "warn"
	}
}
